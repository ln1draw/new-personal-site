<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= csrf_meta_tags %>
    <meta name="HandheldFriendly" content="true" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, width=device-width, user-scalable=no" />

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-121638466-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-121638466-1');
    </script>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <% if @blog %>
      <%= stylesheet_link_tag  'blog' %>
    <% end %>
    <%= javascript_include_tag 'application'%>
  </head>

  <body ng-app="app">
    <%= render 'layouts/header' %>
    <%= yield %>

    <% if @blog %>
      <%= render 'layouts/monologue/application/sidebar' %>
      <%= render 'layouts/monologue/application/disqus' %>
    <% end %>

    <%= render 'layouts/footer' %>
  </body>
</html>
